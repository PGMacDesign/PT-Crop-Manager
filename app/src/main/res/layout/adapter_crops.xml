<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_crops_root"
    android:foreground="@drawable/selectable_item_foreground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/adapter_crops_name_tv"
        android:layout_marginTop="2dp"
        android:clickable="false"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="99"
        android:id="@+id/adapter_crops_ll"
        android:layout_below="@+id/adapter_crops_name_tv"
        android:gravity="center_horizontal"
        android:layout_margin="2dp"
        android:clickable="false"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:id="@+id/adapter_crops_ll_tv1"
            android:textSize="@dimen/text_size_small"
            android:gravity="center"
            android:clickable="false"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:id="@+id/adapter_crops_ll_tv2"
            android:textSize="@dimen/text_size_small"
            android:gravity="center"
            android:clickable="false"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:id="@+id/adapter_crops_ll_tv3"
            android:textSize="@dimen/text_size_small"
            android:gravity="center"
            android:clickable="false"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_crops_ll"
        android:id="@+id/adapter_crops_bottom_tv"
        android:gravity="center"
        android:layout_margin="2dp"
        android:clickable="false"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:id="@+id/separator"
        android:layout_below="@+id/adapter_crops_bottom_tv"
        android:layout_marginTop="2dp"
        android:clickable="false"
        />

</RelativeLayout>